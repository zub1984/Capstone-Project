<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="@dimen/search_option_layout_margin"
    android:layout_marginRight="@dimen/search_option_layout_margin"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/search_option_icon_width"
        android:layout_height="@dimen/search_option_icon_width"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/search_option_icon_margin"
        android:paddingLeft="@dimen/search_option_icon_padding_left"
        android:paddingStart="@dimen/search_option_icon_padding_left"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_icon"
        android:cropToPadding="true" />

    <TextView
        android:id="@+id/title"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/search_option_title_margin_left"
        android:layout_marginStart="@dimen/search_option_title_margin_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/up"
        android:layout_toStartOf="@+id/up"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/up"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/search_option_up_width"
        android:layout_height="@dimen/search_option_up_height"
        android:layout_margin="@dimen/search_option_up_margin"
        android:layout_marginEnd="@dimen/search_option_up_margin_end"
        android:layout_marginRight="@dimen/search_option_up_margin_end"
        android:layout_gravity="center|end"
        android:contentDescription="@string/content_description_up"
        android:src="@drawable/ic_up" />

    <View
        android:id="@+id/border"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E8E8E8" />
    
</RelativeLayout>
